<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/home_page_detail_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_detail_viewpage_height"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/home_page_detail_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <com.yinuo.ui.component.widget.view.FlipperViewGroup
                    android:id="@+id/home_page_detail_flipper_viewgroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.6"/>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/home_page_detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/home_page_detail_floating_action_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_anchor="@id/home_page_detail_appbar"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/home_page_detail_nested_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@color/window_page_color" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""/>
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_page_details_options_parent"
            android:layout_width="wrap_content"
            android:layout_height="168dp"/>

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/home_page_detail_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/home_page_detail_download_layout">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccdddddd"/>

        <ImageView
            android:id="@+id/home_page_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/home_page_detail_share"
            android:layout_marginLeft="@dimen/home_page_detail_share_margin"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/home_page_detail_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/home_page_detail_collection"
            android:layout_toRightOf="@id/home_page_detail_share"
            android:layout_marginLeft="@dimen/home_page_detail_share_margin"
            android:layout_marginRight="@dimen/home_page_detail_share_margin"
            android:layout_centerVertical="true"/>

        <com.yinuo.ui.component.widget.view.IconRoundCornerProgressBar
            android:id="@+id/home_page_detail_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/home_page_detail_progress_margin"
            android:layout_marginTop="@dimen/home_page_detail_progress_margin"
            android:layout_marginRight="@dimen/home_page_detail_share_margin"
            android:layout_toRightOf="@id/home_page_detail_collection"
            app:rcBackgroundPadding="0dp"
            app:rcIconBackgroundColor="@color/custom_progress_blue_progress"
            app:rcIconPadding="5dp"
            app:rcIconSize="44dp"
            app:rcIconSrc="@mipmap/ic_android"
            app:rcMax="100"
            app:rcProgressColor="@color/custom_progress_blue_progress"
            app:rcRadius="5dp"
            app:rcReverse="true" />

        <TextView
            android:id="@+id/home_page_detail_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="@string/home_page_detail_download"
            android:layout_alignLeft="@+id/home_page_detail_download"
            android:layout_alignRight="@+id/home_page_detail_download"/>

        <Button
            android:id="@+id/home_page_detail_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/home_page_detail_collection"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/home_page_detail_share_margin"
            android:layout_marginBottom="@dimen/home_page_detail_progress_margin"
            android:layout_marginTop="@dimen/home_page_detail_progress_margin"
            android:background="@null"/>

    </RelativeLayout>
</RelativeLayout>
