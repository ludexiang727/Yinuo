<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/city_choose_search"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_margin="10dip"
        android:background="@drawable/city_choose_edittext_bg"
        android:drawableLeft="@drawable/city_choose_search_icon"
        android:drawablePadding="5dp"
        android:hint="@string/city_choose_page_search_hint"
        android:padding="10dip"
        android:textColor="#515151"
        android:textSize="16dp" />

    <com.yinuo.ui.component.widget.view.CityChoosePageListView
        android:id="@+id/city_choose_page_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/city_choose_search"
        android:layout_marginTop="7dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <ListView
        android:id="@+id/city_choose_search_result_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/city_choose_search"
        android:layout_marginTop="7dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone" />

    <TextView
        android:id="@+id/city_choose_page_search_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_choose_search"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/city_choose_page_no_result"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.yinuo.ui.component.widget.view.LetterListView
        android:id="@+id/city_choose_page_letter_view"
        android:layout_width="25dip"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_below="@id/city_choose_search"
        android:layout_marginRight="2dp"
        android:layout_marginTop="7dp" />
</merge>