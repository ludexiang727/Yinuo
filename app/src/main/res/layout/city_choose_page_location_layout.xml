<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/city_choose_page_notify"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:text="@string/city_choose_page_current_location"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/city_choose_page_location_city"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginRight="40dip"
        android:background="@drawable/city_choose_page_text_selector"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/city_choose_page_locating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:src="@drawable/loading_anim"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="#E2E2E2" />

</RelativeLayout>