<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_bezier_refresh_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_refresh_loading_margin_top"
        android:layout_marginBottom="@dimen/app_refresh_loading_margin_top"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/loading_anim"
        android:visibility="gone"/>

    <com.yinuo.ui.component.widget.view.BezierRefreshView
        android:id="@+id/app_refresh_bezier_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_refresh_loading_margin_top"
        android:layout_marginBottom="@dimen/app_refresh_loading_margin_top"
        android:layout_gravity="center_horizontal"
        app:max_circle_radius = "@dimen/app_refresh_top_circle_radius"
        app:min_circle_radius="@dimen/app_refresh_bottom_circle_radius"
        app:bezier_view_color="#9ba2ab"
        app:topcircle_x="20dp"
        app:topcircle_y="20dp"
        app:bottomcircle_x="20dp"
        app:bottomcircle_y="20dp"/>

</LinearLayout>