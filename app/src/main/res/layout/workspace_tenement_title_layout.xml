<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/workspace_tenement_title_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/workspace_tenement_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_title_parent_margin"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:id="@+id/workspace_tenement_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_title_parent_margin"
            android:layout_marginRight="@dimen/app_title_parent_margin"
            android:layout_toRightOf="@id/workspace_tenement_title_left"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/workspace_tenement_condition_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/workspace_tenement_condition_margin"
        android:layout_marginBottom="@dimen/workspace_tenement_condition_margin"
        android:layout_below="@id/workspace_tenement_title_parent">
        <TextView
            android:id="@+id/workspace_tenement_condition_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/workspace_tenement_condition_area"/>

        <TextView
            android:id="@+id/workspace_tenement_condition_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/workspace_tenement_condition_price"/>

        <TextView
            android:id="@+id/workspace_tenement_condition_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/workspace_tenement_condition_more"/>
    </LinearLayout>
</merge>