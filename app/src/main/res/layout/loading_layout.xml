<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loading_background">

    <ImageView
        android:id="@+id/loading_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_anim"/>

    <TextView
        android:id="@+id/loading_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/loading_status"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_loading_error_margin_top"
        android:textSize="@dimen/app_loading_error_size"
        android:textColor="@color/loading_error_color"
        android:visibility="gone"/>
</RelativeLayout>