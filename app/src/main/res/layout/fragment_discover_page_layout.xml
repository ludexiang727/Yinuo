<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yinuo.ui.component.widget.view.DiscoverRecyclerView
        android:id="@+id/discover_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 瀑布流模式 -->
    <com.yinuo.ui.component.widget.Loading
        android:id="@+id/discover_page_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <HorizontalScrollView
        android:id="@+id/discover_horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_navigation_parent_height"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:background="@color/discovery_page_category_bg">
        <LinearLayout
            android:id="@+id/discover_navigation_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <View
        android:id="@+id/discover_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/discover_horizontal_scroll_view"
        android:background="@color/discovery_page_separator"/>
</merge>